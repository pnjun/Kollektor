<Tag>:
    id:tagBox
    orientation: 'horizontal'
    pos_hint: {'center_y': 0.5}
    size_hint: None, None
    height: dp(20)

    RelativeLayout:
        pos: self.pos
        canvas:
            Color:
                hsv: tagBox.color,.25,1
            RoundedRectangle:
                pos: 0,0
                radius: 0, 10, 0, 10
                size: (self.width, self.height)
        MDBoxLayout:
            padding: dp(10), dp(5)
            MDLabel:
                id: tag_label
                text: ''

<Item@MDLabel>:
    text: 'asdf'
    font_style: 'Body1'
    theme_text_color: 'Custom'
    text_color: (0.45,0.45,0.45)

<Entry>:
    size_hint: 0.9, None
    pos_hint: {'center_x': 0.5}
    height: dp(50)
    elevation: 3

    BoxLayout:
        orientation: 'vertical'
        padding: dp(10), dp(2)
        spacing: dp(2)
        MDBoxLayout:
            orientation: 'horizontal'
            MDLabel:
                id: description
                size_hint_x: 0.35
                text: ''
                theme_text_color: 'Primary'
            MDBoxLayout:
                id: tagList
                orientation: 'horizontal'
                size_hint_x: 0.65
                spacing: dp(5)


        MDBoxLayout:
            orientation: 'vertical'
            id: itemList
            Item:

<TagBar>:

<TagSearch>:

<FilterBar@BoxLayout>
    size_hint: 0.95, None
    pos_hint: {'center_x': 0.5}
    height: dp(60)
    orientation: 'horizontal'

    TagBar:
        id: tag_bar

        size_hint_x: None
        width: self.minimum_width
        spacing: dp(10)

    TagSearch:
        size_hint_y: None
        height: dp(40)
        pos_hint: {'center_y': 0.4}
        multiline: False
        font_size: 18
        cursor_color: 0,0,0,1
        background_color: 1,1,1,0
        background_normal: ""
        background_active: ""

        hint_text: "Filter Tags..."
        hint_text_color: 0.5, 0.5, 0.5, 1

<EntryList>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    padding: dp(4), dp(10)
    spacing: dp(10)

<HeadBar@MDToolbar>:
    title: 'Kollektor'

MDBoxLayout:
    orientation: 'vertical'

    HeadBar:

    FilterBar:
        id: filter_bar

    MDSeparator:
        height: dp(1)
    ScrollView:
        id: entry_scroll
        do_scroll_x: False
        scroll_wheel_distance: dp(75)

